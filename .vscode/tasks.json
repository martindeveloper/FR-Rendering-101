{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake Configure",
      "type": "shell",
      "command": "cmake",
      "args": ["-S", ".", "-B", "build/"],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "CMake Build Debug",
      "type": "shell",
      "command": "cmake",
      "args": ["--build", "build/", "--config", "Debug"],
      "dependsOn": ["CMake Configure"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$msCompile"]
    },
    {
      "label": "CMake Build Release",
      "type": "shell",
      "command": "cmake",
      "args": ["--build", "build/", "--config", "Release"],
      "dependsOn": ["CMake Configure"],
      "group": "build",
      "problemMatcher": ["$msCompile"]
    },
    {
      "label": "CMake Clean",
      "type": "shell",
      "command": "cmake",
      "args": ["--build", "build/", "--target", "clean"],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Run Debug",
      "type": "shell",
      "command": "build/Debug/FlyingRatRendering101.exe"
    },
    {
      "label": "Run Release",
      "type": "shell",
      "command": "build/Release/FlyingRatRendering101.exe"
    }
  ]
}
