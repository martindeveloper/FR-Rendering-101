{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Configure",
      "type": "shell",
      "command": "cmake",
      "args": ["-S", ".", "-B", "build/", "-A", "x64"],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Build Debug",
      "type": "shell",
      "command": "cmake",
      "args": ["--build", "build/", "--config", "Debug", "--parallel", "4"],
      "dependsOn": ["Configure"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$msCompile"]
    },
    {
      "label": "Build Release",
      "type": "shell",
      "command": "cmake",
      "args": ["--build", "build/", "--config", "Release", "--parallel", "4"],
      "dependsOn": ["Configure"],
      "group": "build",
      "problemMatcher": ["$msCompile"]
    },
    {
      "label": "Build Shaders",
      "type": "shell",
      "command": "cmake",
      "args": ["--build", "build/", "--config", "Debug", "--target", "Shaders"],
      "dependsOn": ["Configure"],
      "group": "build",
      "problemMatcher": ["$msCompile"]
    },
    {
      "label": "Clean",
      "type": "shell",
      "command": "cmake",
      "args": ["--build", "build/", "--target", "clean"],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Run Debug",
      "type": "shell",
      "command": "build/Debug/FlyingRatRendering101.exe"
    },
    {
      "label": "Run Release",
      "type": "shell",
      "command": "build/Release/FlyingRatRendering101.exe"
    }
  ]
}
